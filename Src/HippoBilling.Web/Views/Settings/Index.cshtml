            <div class="modal-content">
                <div class="modal-header darkblue">
                    <i class="fa fa-times-circle"></i> NPI Lookup
                </div>
                <div class="modal-body">
                    <form class="form-horizontal row" role="form" name="npiForm" novalidate>

                        <div class="form-group" >
                            <label class="col-md-2 control-label">NPI#</label>
                            <div data-ng-class="{'col-md-9':true, 'has-error': npiForm.npi.$invalid && npiForm.$dirty}">
                                <input type="text" class="form-control" name="npi" data-ng-pattern="/^[1-9][0-9]{9}$/" data-ng-model="npi" data-ng-required="true" placeholder="Please Enter NPI Number">
                                <span data-ng-show="npiForm.npi.$error.required && npiForm.$dirty" class="help-block">The NPI is required.</span>
                                <span data-ng-show="npiForm.npi.$error.pattern && npiForm.$dirty" class="help-block">The NPI must be 10 numbers.</span>
                                <div class="has-error" data-ng-show="npiForm.npi.$valid && commandResult.Success===false" style="margin-bottom: 0px;">
                                    <span class="help-block" data-ng-repeat="e in commandResult.Errors">{{e.Error}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 col-md-offset-2" style="border-top: 1px solid #ccc; padding-top: 15px;">
                            <button type="button" class="btn btn-info" data-ng-click="lookup()" data-ng-disabled="npiForm.$invalid">Auto Populate Fields<img src="@Url.Content("~/assets/img/submit-icon.png")"></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
    

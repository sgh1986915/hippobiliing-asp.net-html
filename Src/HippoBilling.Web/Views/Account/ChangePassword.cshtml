
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.Account.cshtml";
}
@model HippoBilling.Web.Models.Account.ChangePasswordViewModel
<form class="form-auto" role="form" method="post">
    <h5>------------------   Password Change   ------------------</h5>
    <div class="form-panel">
        <div class="form-group">
            <i class="fa fa-unlock-alt"></i>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "*********" })
        </div>
        <div class="form-group">
            <i class="fa fa-unlock-alt"></i>
            @Html.PasswordFor(m => m.RetypePassword, new { @class = "form-control", @placeholder = "Retype your new password" })
        </div>
        @Html.ValidationSummary()
    </div>
    <button class="btn btn-lg btn-success btn-block" type="submit">Confirm Changes</button>
    <p class="terms">Privary Policy | TOS | Contact Us</p>
</form>

